# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Tavily API Configuration
# Get your API key from: https://tavily.com/
TAVILY_API_KEY=your_tavily_api_key_here

# Optional: OpenRouter Configuration
# Get your API key from: https://openrouter.ai/
# USE_OPENROUTER=false
# OPENROUTER_API_KEY=your_openrouter_api_key_here

# Optional: Red Team Evaluation
# Enable red team evaluation for research reports
# ENABLE_RED_TEAM_EVAL=false

# Optional: Red Team Feedback Loop
# Enable iterative refinement based on red team feedback
# RED_TEAM_FEEDBACK_LOOP=true

# Optional: Red Team Configuration
# Minimum objectivity score threshold (0.0 to 1.0)
# MIN_OBJECTIVITY_SCORE=0.75

# Maximum refinement iterations
# MAX_REFINEMENT_ITERATIONS=3

